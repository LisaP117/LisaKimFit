<header data-component="header">
	<div class="container">
		<div class="header-logo">
			<a href="/" class="header-logo__link" data-logo>
				<svg class="header-logo__icon" width="150" height="75" viewBox="0 0 150 75" aria-describedby="logo">
					<title id="logo">Lisa Kim Fit</title>
					<image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/LKF-PurpleAsset.svg" x="-22px" y="5px" width="100%"
						height="100%"></image>
				</svg>
			</a>
		</div>
		{% include "_partials/components/navigation.njk" %}
	</div>
	<div class="navigation__mobile navigation__mobile--closed" data-menu>
		<ul class="navigation__list">
			{% for item in settings.navigation %}
			<li class="navigation__listItem" data-link="{{item.ref}}"><span>{{item.title}}</span></li>
			{% endfor %}
		</ul>
	</div>
</header>