{% for section in settings.sections %}
<div class="posts">
	<section id="{{ section.id }}" class="section {{ 'section__column--alignRight' if 'reverse' in section.imagePosition }}" aria-labelledby="{{ section.id }}">
		<div class="section__row">
			<div class="section__column">
				<h2>{{ section.title }}</h2>
				<p>{{ section.body }}</p>

				{% if section.list %}
					<ul class="section__list">
						{% for item in section.list %}
							<li>{{ item.item }}</li>
						{% endfor %}
					</ul>
				{% endif %}

				{% if section.disclaimer %}
					<p class="disclaimer"><small>{{ section.disclaimer }}</small></p>
				{% endif %}

				{% if section.button %}
					<button type="button" data-contact-button>{{ section.button }}</button>
				{%  endif %}

			</div>

			<div class="section__column {{ 'section__column--reverse' if 'reverse' in section.imagePosition }}">
				{% if section.image1 %}
				<img srcset="{{section.image2}} 480w,{{section.image1}} 800w"
     					sizes="(max-width: 800px) 480px, 800px"
     					src="{{section.image1}}"
     					alt="{{section.imageTitle}}">
				{% endif %}
				{% if section.video %}
					<video width="480" autoplay>
						<source src="{{section.video}}.mp4" type="video/mp4">
						<source src="{{section.video}}.ogg" type="video/ogg">
					</video>
				{% endif %}
			</div>
		</div>
	</section>
	<blockquote>
		<div class="quote">
			<i class="fas fa-quote-right"></i><p>{{ section.quote }}</p><i class="fas fa-quote-left"></i>
		</div>
		<div class="blockquote__divider">
			<svg class="blockquote__divider__icon" width="150" height="27" viewBox="0 0 16.6 13.9" aria-describedby="logo">
				<title id="blockquoteHeartlogo">Heart and ecg</title>
				<image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/heart.svg" width="100%"
					height="100%"></image>
			</svg>
		</div>
	</blockquote>
	<div class="divider"></div>
</div>
{% endfor %}

