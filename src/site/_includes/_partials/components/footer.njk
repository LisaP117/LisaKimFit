<footer class="footer">
	<div class="container">
		<ul class="footer__list" aria-role="menu">
			{% for item in settings.navigation %}
				{% if pagename %}
				<li class="footer__listItem" data-link="{{item.ref}}" aria-role="menuitem"><a class="footer__link"
						href="/" aria-role="link">{{item.title}}</a></li>
				{% else %}
				<li class="footer__listItem" data-link="{{item.ref}}" aria-role="menuitem">{{item.title}}</li>
				{% endif %}
			{% endfor %}
				<li class="footer__listItem"><a href="/cookie-policy" aria-role="link" aria-labelledby="cookie policy link">Cookie Policy</a></li>
		</ul>
		<p>Copyright &copy; Lisa Kim Fit 2021<br/>Website by <b>She Who Codes LTD</b></p>
	</div>
</footer>