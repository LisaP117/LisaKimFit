{% for contact in settings.contact %}
<div class="posts">
	<section id="{{ contact.id }}" class="section" aria-labelledby="{{ contact.id }}">
		<div class="section__row">
			<div class="section__column">
				<h2>{{ contact.title }}</h2>
				<p>{{ contact.body }}</p>
			</div>
			<div class="section__column">
				<form class="form" data-component="form" name="contact-form" method="POST" action="#data-form-submitted" netlify netlify-honeypot="bot-field">
					<div data-fieldset-wrap>
						<span class="disclaimer"><small>* required field</small></span>
						{% for field in contact.fields %}
							<fieldset class="form__field" data-fieldset>
									<label for="{{field.id}}"><span data-label-text class="noError">{{field.name}}* <i class="far fa-check-circle hide" data-field-complete></i></span> <span class="hide" data-field-error><i class="fas fa-exclamation-circle"></i>Please enter a valid {{field.id}}</span></label>
									{% if 'textarea' in field.type %}
										<textarea name="{{field.id}}" id="{{field.id}}" data-input rows="5" placeholder="{{field.placeholder}}"></textarea>
									{% else %}
										<input name="{{field.id}}" type="{{field.type}}" id="{{field.id}}" data-input placeholder="{{field.placeholder}}" {{ 'required' if 'true' in field.isRequired }} noError />
									{% endif %}
							</fieldset>
						{% endfor %}
						<fieldset class="form__field">
							<input class="form__field__submit disabled" data-submit-button type="submit" value="Send">
						</fieldset>	
					</div>
				</form>
				<div class="form__messages" id="data-form-submitted" data-form-submitted style="display: none;">
					<p data-form-success style="display: none"> Thank you for your message, I'll get back to you soon. Keep an eye on your emails. </p>
					<p data-form-error style="display: none"> Oops! Something went wrong, please refresh and try again!
						<span class="close" data-button="close"><i class="fas fa-times"></i></span>
					</p>
				</div>
			</div>
		</div>
	</section>
	<div class="divider"></div>
</div>
{% endfor %}