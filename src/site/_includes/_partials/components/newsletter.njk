{% for newsletter in settings.newsletter %}
<div id="mlb2-3910831" class="newsletter ml-form-embedContainer ml-subscribe-form ml-subscribe-form-3910831">
	<h2>{{ newsletter.title }}</h2>
	<p>{{ newsletter.body }}</p>
	<div class="newsletter__embedd-wrapper ml-form-embedWrapper embedForm ml-form-embedBody ml-form-embedBodyHorizontal row-form ml-form-align-center">
		<div class="ml-form-embedContent" style="margin-bottom:0"></div>
		<form class="newsletter__form ml-block-form" data-component="form" action="https://static.mailerlite.com/webforms/submit/d8k4m2" data-code="d8k4m2" method="post" target="_blank">
			<div class="ml-form-formContent horozintalForm" data-fieldset-wrap>
				{% for field in newsletter.fields %}
				<div class="newsletter__form__field ml-field-group ml-field-name ml-validate-required" data-fieldset>
					<label for="newsletter__{{field.id}}">
						<span data-label-text class="noError">
							{{field.name}}*
							<i class="far fa-check-circle hide" data-field-complete></i>
						</span>
						<span class="hide" data-field-error>
							<i class="fas fa-exclamation-circle"></i>
							Please enter a valid {{field.id}}
						</span>
					</label>
					<input id="newsletter__{{field.id}}" class="form-control" type="{{field.type}}" name="fields[{{field.id}}]" data-input="{{field.name}}" placeholder="{{field.placeholder}}" {{ 'required' if 'true' in field.isRequired }} noError />
				</div>
				{% endfor %}
				<div class="newsletter__form__field ml-button-horizontal primary labelsOn">
					<button class="newsletter__form__field__submit primary" data-submit-button type="submit" disabled>SUBSCRIBE</button>
				</div>
			</div>
			<input type="hidden" name="ml-submit" value="1">
			<input type="hidden" name="anticsrf" value="true">
		</form>
		<div data-form-submitted class="newsletter__form__messages ml-form-successBody ml-form-successContent row-success" style="display: none;">
			<p data-form-success style="display: none"> Thank you for subscribing. Make sure to add info@lisakimfit.com to your
	contacts!</p>
			<p data-form-error style="display: none"> Oops! Something went wrong, please refresh and try again!<a href="/" class="close" data-button="close"><i class="fas fa-times"></i></a></p>
		</div>
	</div>
	<img src="https://track.mailerlite.com/webforms/o/3910831/d8k4m2?v1618251185" width="1" height="1"
		style="max-width:1px;max-height:1px;visibility:hidden;padding:0;margin:0;display:block" alt="." border="0">
	<script src="https://static.mailerlite.com/js/w/webforms.min.js?v0c75f831c56857441820dcec3163967c"
		type="text/javascript"></script>
</div>
{% endfor %}